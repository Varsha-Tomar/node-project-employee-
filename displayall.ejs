<html>
      <head>
   
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

    <script src="/javascripts/project.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow+Condensed:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <div class="maincontainer">
      <div class="box">
        <div class="headingbox">
          <img src="/images/logo.png" style="width: 30px; margin-right: 5px" />
          <div style="display: flex; flex-direction: column">
            <div
              style="
                letter-spacing: 0.6px;
                color: #30336b;
                font-size: 16px;
                font-weight: bold;
              "
            >
              Employee Interface
            </div>
            <div style="font-size: 12px; font-weight: 700; color: #4a69bd">
              Add New Employee
            </div>
          </div>

          
        </div>
        <hr color="#6a89cc" style="width: 98%" />

        <div class="container" style="width: 98%">

    <% if(!status) {%>
    <h1><%= message %></h1>
    <% } else { %> 

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Employee</th>
                    <th scope="col">dob</th>
                    <th scope="col">Address</th>
                    <th scope="col">Department</th>
                    <th scope="col">Grade</th>
                    <th scope="col">Salary</th>
                    <th scope="col">Picture</th>
                    <th scope="col">Update</th>
                </tr>
            </thead>
            <tbody>
                 <% data.map((item,i)=> { %>

                  <tr>
                        <th scope="row"><%=i+1 %></th>
                        <td><%=item.employeeid %> <br> <%=item.employeename %></td>
                        <td><%=item.dob %> <br><%=item.gender %></td>
                        <td><%=item.address %> <br><%=item.cityname%>,<%=item.statename %></td>
                        <td><%=item.department %></td>
                        <td><%=item.grade %></td>
                        <td><%=item.salary %></td>
                        <td><a href="/employee/show_picture?employeeid=<%= item.employeeid %>&employeename=<%= item.employeename %>&picture=<%= item.picture %>">
                        <img src="/images/<%= item.picture %>" style="height: 60px; width: 60px; border-radius: 100%;" />
</a>
</td>
                        <td><a href="/employee/edit_delete_display?employeeid=<%= item.employeeid %>" style="cursor: pointer; text-decoration: none;"><img src="/images/edit.jpg " style="width: 30px; height: 30px;"><img src="/images/delete.jpg " style="width: 30px; height: 30px; margin: 5px;"> </a></td>
                    </tr>


                        <% }) %>
                  </div>
                  </div>
                  </div>
            </tbody>
        </table>
       
            

  

    <% } %>
  </body>
</html>